{{#content "body"}}

  <div class="container mt-4">
    <h1>Your Cart</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <td>{{this.product.title}}</td>
            <td>{{this.quantity}}</td>
            <td>
              <button class="btn btn-sm btn-success">Add</button>
              <button class="btn btn-sm btn-warning">Reduce</button>
              <button class="btn btn-sm btn-danger">Delete</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{/content}}